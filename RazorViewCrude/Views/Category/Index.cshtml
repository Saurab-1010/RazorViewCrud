@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Category </a>
<hr>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.CategoryId
                </td>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="30%">
                    @obj.CreatedDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2"> Edit</a>
                        <form asp-action="Delete" asp-route-id="@obj.CategoryId" method="post">
                            <button type="submit" class="btn btn-danger mx-2"> Delete</button>
                        </form>
                        @*<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2"> Delete</a>*@
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@using RazorViewCrude.ViewModel

@model ProductViewModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryName"></label>
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-control">
                <option value="">Choose Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProductName"> Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UnitPrice"> UnitPrice</label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"> DisplayOrder</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"> Create</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="width:150px"> Back to List</a>
    </div>
</form>

@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<h1>Product</h1>

<a asp-controller="Product" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Product </a>
<hr>

<table class="table table-bordered table striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                Category Id
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width=20%>
                    @obj.ProductId
                </td>
                <td width=20%>
                    @obj.ProductName
                </td>
                <td width=20%>
                    @obj.CategoryId
                </td>
                <td width=20%>
                    @obj.UnitPrice
                </td>
                <td width=20%>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2"> Edit</a>
                        <form asp-action="Delete" asp-route-id="@obj.ProductId" method="post">
                            <button type="submit" class="btn btn-danger mx-2"> Delete</button>
                        </form>
                        @*<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-primary mx-2"> Delete</a>*@
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>


